@{
    ViewBag.Title = "Turkey Weather Map";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        
        body {
            position: relative;
            margin: 0;
            overflow: hidden;
            background-color: aqua;
            
        }

        .cloud {
            position: absolute;
            background-color: rgba(255, 255, 255, 0.5);
            border-radius: 50%;
            opacity: 0.6;
            filter: blur(2px);
        }

        header h1, header p {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <header class="text-center my-5">
            <h1 class="display-4 text-warning">Turkey Weather Map</h1>
            <p class="display-7 text-dark">Explore real-time weather data city by city</p>
        </header>
        <main class="text-center">
            <a href="/Home/Map" class="btn btn-success btn-lg">Explore the Map</a>
        </main>
    </div>
        
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const cloudContainer = document.body;


            function createCloud() {
                const cloud = document.createElement("div");
                cloud.classList.add("cloud");
                const size = Math.random() * 200 + 100;
                cloud.style.width = size + "px";
                cloud.style.height = size / 2 + "px";
                cloud.style.top = Math.random() * window.innerHeight + "px";
                cloud.style.left = -size + "px";

                cloudContainer.appendChild(cloud);


                const moveCloud = () => {
                    const cloudSpeed = Math.random() * 2 + 1;
                    cloud.style.left = parseFloat(cloud.style.left) + cloudSpeed + "px";

                    if (parseFloat(cloud.style.left) > window.innerWidth) {
                        cloud.style.left = -size + "px";
                    }
                };


                setInterval(moveCloud, 16);
            }


            for (let i = 0; i < 5; i++) {
                createCloud();
            }
        });
    </script>
   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"></script>
</body>
</html>
